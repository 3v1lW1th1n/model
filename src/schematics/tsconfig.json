{
  "compilerOptions": {
    "outDir": "../../dist/schematics",
    "baseUrl": "../../",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": "./",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "es6",
    "types": ["node", "mocha"]
  },
  "include": ["**/*"],
  "exclude": ["**/*.test.ts", "*/files/**/*"]
}
